<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <welcome-file-list>
    <welcome-file>/login.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>springUtf8Encoding</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>PermissionEncodingFilter</filter-name>
    <filter-class>com.yondervision.mi.common.filter.PermissionEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.json</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.file</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>PermissionEncodingFilter</filter-name>
    <url-pattern>*.img</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>miapi</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>miapi</servlet-name>
    <url-pattern>*.do</url-pattern>
    <url-pattern>*.json</url-pattern>
    <url-pattern>*.html</url-pattern>
    <url-pattern>*.file</url-pattern>
    <url-pattern>*.img</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>This is the menu function control</description>
    <servlet-name>menuServlet</servlet-name>
    <servlet-class>com.yondervision.mi.common.authority.MenuServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>menuServlet</servlet-name>
    <url-pattern>*.menu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>flowServlet</servlet-name>
    <servlet-class>com.yondervision.mi.common.FlowServlet</servlet-class>
    <load-on-startup>5</load-on-startup>
  </servlet>
	
  <servlet-mapping>
    <servlet-name>flowServlet</servlet-name>
    <url-pattern>/flowServlet</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>
</web-app>